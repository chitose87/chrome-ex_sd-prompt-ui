{
  "manifest_version": 3,
  "name": "My Extension",
  "version": "1.0",
  "description": "A simple Chrome extension.",
  "icons": {
    "64": "icon.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "action": {
    "default_popup": "index.html"
  },
  //  "action": {
  //    "default_icon": "icon.png",
  //    "default_title": "Open resizable window"
  //  },
  //  "background": {
  //    "service_worker": "background.js"
  //  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "content_script.js"
      ]
    }
  ]
}
